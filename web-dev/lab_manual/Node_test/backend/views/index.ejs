<!DOCTYPE html>
<html>
<head>
  <title>Employee Management</title>
</head>
<body>
  <div class="container">
    <h1>Employee Management System</h1>
    <a href="/employees/add" class="btn">Add New Employee</a>
    <div style="float: right;">
      <a href="/auth/logout" class="btn btn-small btn-delete">Logout</a>
    </div>
    
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Position</th>
          <th>Department</th>
          <th>Email</th>
          <th>Age</th>
          <th>Hire Date</th>
          <th>Salary</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (employees.length === 0) { %>
          <tr>
            <td colspan="8">No employees found</td>
          </tr>
        <% } else { %>
          <% employees.forEach(employee => { %>
            <tr>
              <td><%= employee.name %></td>
              <td><%= employee.position %></td>
              <td><%= employee.department.name %></td>
              <td><%= employee.email %></td>
              <td><%= employee.age %></td>
              <td><%= new Date(employee.hireDate).toLocaleDateString() %></td>
              <td>$<%= employee.salary.amount.toLocaleString() %></td>
              <td>
                <a href="/employees/edit/<%= employee._id %>" class="btn btn-small">Edit</a>
                <form action="/employees/delete/<%= employee._id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-small btn-delete" onclick="return confirm('Are you sure you want to delete this employee?')">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>